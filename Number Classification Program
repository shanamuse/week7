#include <stdio.h>

int is_positive(int num) {
    if (num > 0) {
        return 1;
    } else {
        return 0;
    }
}

int is_negative(int num) {
    if (num < 0) {
        return 1;
    } else {
        return 0;
    }
}

int is_zero(int num) {
    if (num == 0) {
        return 1;
    } else {
        return 0;
    }
}

int main() {
    int input = 0;

    printf("Enter:\n");
    scanf("%d", &input);

    printf("Calling is_positive: %d\n", is_positive(input));
    printf("Calling is_negative: %d\n", is_negative(input));
    printf("Calling is_zero: %d\n", is_zero(input));

    return 0;
}
